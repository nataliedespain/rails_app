<div class="form-container">
	<div class="form">
		<h2>Log in</h2>

			<%= form_for(:session, url: login_path) do |f| %>

			  <div class="text">
			  	<%= f.text_field :email, placeholder: "Email" %>
				</div>

			  <div class="text">
			  	<%= f.password_field :password, placeholder: "Password" %>
				</div>

			  <%= f.submit "Log in" %>
			<% end %>
	</div>
</div>