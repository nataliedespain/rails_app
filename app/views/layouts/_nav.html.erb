<div class="header">
	<h1><%=link_to "RAILS BLOG", root_path %></h1>
</div>

<div class="nav-container">
<% if logged_in? %>
	<span><%= link_to "HOME", root_path %></span>
	<span><%= link_to "ALL POSTS", posts_path %></span>
  <span><%= link_to "USERS", users_path %></span>
  <span class="dropdown">
  	<%= link_to current_user.name.upcase, current_user %> 
  	<i class="fa fa-caret-down" aria-hidden="true"></i>
  	<div class="dropdown-content">
	  	<%= link_to "PROFILE", current_user %>
	  	<%= link_to "EDIT PROFILE", edit_user_path(current_user) %>
	  	<%= link_to "LOG OUT", logout_path, method: "delete" %>
  	</div>
  </span>
<% else %>
	<div class="add-margin">
		<span><%= link_to "HOME", root_path %></span>
		<span><%= link_to "ALL POSTS", posts_path %></span>
	  <span><%= link_to "USERS", '#' %></span>
  </div>
<% end %>
</div>