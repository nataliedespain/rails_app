
<div class="post-container">

<h2>All Posts</h2>

<%= link_to new_post_path do %>
	<center><button class="new-button">NEW POST</button></center>
<% end %>

<div class="count">
	<% if @posts.count == 0 %>
		<p>No posts have been created yet... :(</p>
	<% end %>
</div>

<% @posts.each do |p| %>

	<div class="post">
		<h3><%= p.title %></h3>
		<div class="post-comments"><%= p.comments.count %> comments</div>
		<hr>
		<p><%= p.body %></p>
		<h4>
			<%= link_to user_path(p.user) do %>
				<%= gravatar_for p.user, size: 25 %>
			<% end %>
			<%= p.user.name %>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<%= time_ago_in_words(p.created_at) %> ago
		</h4>
		<%= link_to post_path(p) do %>
			<button class="view-button">VIEW POST</button>
		<% end %>
	</div>
	
<% end %>
<br>
</div>